<!-- header -->
<header>
    <a href="/">Home</a>
    <a href="/signup">SignUp</a>
    <% if (user) { %>
        <!-- Show user name if user is logged in -->
        <p>Welcome, <%= user.username %>!</p>
    <% } else { %>
        <!-- Show login button if user is not logged in -->
        <a href="/login">Login</a>
    <% } %>
</header>
